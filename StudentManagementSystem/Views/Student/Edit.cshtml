@model StudentManagementSystem.Models.Student

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<form submit="/Edit" method="post">
    <input name="id" value="@Model.ID" hidden />        <!--What if someone unhides this with source view? Is that even possible?-->
    <input name="firstName" value="@Model.FirstName" />
    <input name="lastName" value="@Model.LastName" />
    <button type="submit">Edit Student</button>
</form>